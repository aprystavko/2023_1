<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="FullUITestSuite" verbose="1" parallel="tests" thread-count="4">

	<test name="PositiveLogInTest-CH">
		<parameter name="browser" value="chrome"/>
		<classes>
			<class name="selenium2.tests.loginpagetests.PositiveLogInTests" />
		</classes>
	</test>

	<test name="NegativeUsernameTest-CH">
		<parameter name="username" value="incorrectUsername"/>
		<parameter name="password" value="SuperSecretPassword!"/>
		<parameter name="expectedMessage" value="Your username is invalid!"/>
		<parameter name="browser" value="chrome"/>
		<classes>
			<class name="selenium2.tests.loginpagetests.NegativeLogInTests">
			</class>
		</classes>
	</test>
	
	<test name="NegativePasswordTest-FF">
		<parameter name="username" value="tomsmith"/>
		<parameter name="password" value="incorrectPassword"/>
		<parameter name="expectedMessage" value="Your password is invalid!"/>
		<parameter name="browser" value="firefox"/>
		<classes>
			<class name="selenium2.tests.loginpagetests.NegativeLogInTests">
			</class>
		</classes>
	</test>
	
	<test name="CheckboxesTests">
		<classes>
			<class name="selenium2.tests.checkboxespagetests.CheckboxesTests" />
		</classes>
	</test>
	
	<test name="DropdownTests">
		<classes>
			<class name="selenium2.tests.dropdowntests.DropdownTest" />
		</classes>
	</test>

</suite>
